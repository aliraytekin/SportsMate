<div class="form-wrapper">
  <div class="form-login">
    <h2 class="form-heading">ğŸ… Welcome back to SportMate</h2>
    <p class="text-muted text-center">Ready to join your next game?</p>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs row justify-content-center">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions d-flex justify-content-center">
        <%= f.button :submit, "Log in", class: "shining-button text-white" %>
      </div>
    <% end %>
    <div class="mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
